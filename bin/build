#!/bin/sh -e

VERSION=1.0

# Navigate to the directory of this script
cd $(dirname $(readlink -f $0))
cd ..

build() {
    if [ "$(uname -n)" == "miraculix" ]; then
      export FLAKE="miraculix"
       ./bin/darwin-build $@
    elif [ "$(uname -n)" == "MacBook-Pro.localdomain" ]; then
       export FLAKE="idefix"
       ./bin/darwin-build $@
    elif [ "$(uname)" == "Linux" ]; then
       ./bin/nixos-build $@
    else
       echo "Unknown platform"
    fi
}

build

